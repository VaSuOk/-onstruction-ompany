                                                            Foreground="Orange">
                                                            <Label.Effect>
                                                                <DropShadowEffect ShadowDepth="1" BlurRadius="1" Color="Black" />
                                                            </Label.Effect>
                                                        </Label>

                                                    </StackPanel>

                                                </StackPanel>

                                            </StackPanel>
                                        </StackPanel>
